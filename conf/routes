# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Root
GET     /                                      Application.root

# Home page
GET     /events                                Application.index

# Home page after Error
GET     /F                                      Application.indexF

# Show user for Event
GET     /users                                	Application.showUsers

# Admin page
GET     /admin                                  Application.adminIndex

# Event Creation
POST    /admin/new                          	Application.newEvent

# Event Creation after Error
GET    /admin/newF                          	Application.createEventF

# Event Deletion
POST    /admin/delete                          	Application.deleteEvent

# Event Editing
POST    /admin/edit                          	Application.editEvent

# Event Editing after Error
GET    /admin/edit                          	Application.editEvent

# Event Saving
POST    /admin/editeventsave                     Application.editEventSave

# Add Booking
POST    /addbooking                          	Bookingcontroller.addBooking

# Remove Booking
POST    /rembooking                          	Bookingcontroller.removeBooking

# Edit Booking
POST    /editbooking                          	Bookingcontroller.editBooking

# Reports
GET    /reports                          		Application.Reports

# Manual Reports
GET    /manreports                          	Application.manualReports

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
