# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Admin page
GET     /admin                                  Application.adminIndex

# Event Creation
POST    /admin/new                          	Application.saveEvent

# Event Creation after Error
GET    /admin/newF                          	Application.createEventF

# Event Deletion
POST    /admin/delete                          	Application.deleteEvent

# Event Editing
POST    /admin/edit                          	Application.editEvent

# Event Editing after Error
GET    /admin/editF                          	Application.editEventF

# Add Booking
POST    /addbooking                          	Application.addBooking

# Remove Booking
POST    /rembooking                          	Application.removeBooking

# Edit Booking
POST    /editbooking                          	Application.editBooking

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
